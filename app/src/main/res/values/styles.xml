        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonThemeNatural">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/theme3Primary</item>
        <item name="android:textSize">16sp</item>
    </style>
